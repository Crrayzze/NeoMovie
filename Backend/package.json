{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && tsc --lib dom --sourceMap -p ./ && cp tsconfig.json dist/ && cp .env dist/",
    "build:test": "rm -rf dist && tsc --lib dom --sourceMap -p ./ && cp tsconfig.json dist/ && cp .env.test dist/",
    "build:local": "rm -rf dist && tsc --lib dom --sourceMap -p ./ && cp tsconfig.json dist/ && cp .env.local dist/",
    "build:prod": "rm -rf dist && tsc --lib dom --sourceMap -p ./ && cp tsconfig.json dist/ && cp .env.prod dist/",
    "lint": "eslint -c .eslintrc.js --ext .ts src/*",
    "run-ts:local": "NODE_ENV=local ts-node -r tsconfig-paths/register --files ./src/index.ts",
    "run-ts:test": "NODE_ENV=test ts-node -r tsconfig-paths/register --files ./src/index.ts",
    "test:unit": "NODE_ENV=test ts-mocha -s 500 --paths -p tsconfig.json test/unitTests/**/*.test.ts",
    "test:integration": "NODE_ENV=test nyc --reporter=json --reporter=text --reporter=cobertura ts-mocha --timeout 50000 -s 500 --paths -p tsconfig.json --file test/integrationTests/setup.test.ts test/integrationTests/*.test.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.4",
    "config": "^3.3.6",
    "fastify": "^3.14.0",
    "fastify-cors": "^4.1.0",
    "fastify-env": "^2.1.0",
    "fastify-plugin": "^3.0.0",
    "fastify-static": "^4.5.0",
    "fastify-swagger": "^4.13.0",
    "js-yaml": "^3.14.0",
    "node-themoviedb": "^0.2.8",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "typeorm": "^0.2.31",
    "typescript": "^4.2.3",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-uuid": "^1.0.2",
    "@types/faker": "^5.1.7",
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.20.13",
    "@types/nodemailer": "^6.4.1",
    "@types/sinon": "^9.0.11",
    "@types/ws": "^7.4.1",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "chai-uuid": "^1.0.6",
    "dotenv": "^8.2.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.13",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "faker": "^5.4.0",
    "light-my-request": "^4.3.0",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "sinon": "^9.2.4",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.0.0",
    "ts-sinon": "^2.0.1",
    "tsconfig-paths": "^3.9.0",
    "typeorm-fixtures-cli": "^1.9.1",
    "ws": "^7.4.4",
    "yaml": "^1.10.2"
  }
}
